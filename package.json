{
  "name": "eua-server",
  "version": "0.0.1",
  "description": "eUniversity Africa API",
  "type": "commonjs",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dev": "nodemon src/index.ts",
    "test": "mocha",
    "lint": "npx eslint --max-warnings 0 .",
    "lint-fix": "npx eslint --fix .",
    "docker:run-build": "docker-compose up --build",
    "docker:build": "docker-compose build",
    "docker:run": "docker-compose up",
    "docker:stop": "docker-compose down",
    "prepare": "husky install",
    "typeorm": "npm run build && npx typeorm -d dist/data-source.js",
    "migration:generate": "POSTGRES_HOST=localhost npm run typeorm -- migration:generate",
    "migration:run": "POSTGRES_HOST=localhost npm run typeorm -- migration:run",
    "migration:revert": "POSTGRES_HOST=localhost npm run typeorm -- migration:revert"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/helmet": "^4.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^16.11.10",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-sonarjs": "^0.19.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "husky": "^8.0.3",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.22",
    "npm": "^9.7.1",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typeorm-extension": "^2.8.1",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dockerode": "^3.3.5",
    "dockerode-utils": "^0.0.7",
    "dotenv": "^16.1.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "nanoid": "^3.3.4",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "supertest": "^6.3.3",
    "typeorm": "0.3.16"
  },
  "prepare": "husky install"
}
